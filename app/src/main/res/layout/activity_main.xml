<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:background="@color/color_primary">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="100dp"/>

    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gl_tab"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color_primary">

        <FrameLayout
            android:id="@+id/fl_tab_account"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_select_account"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_main_tab"
                android:layout_gravity="center"
                android:duplicateParentState="true"/>

            <ImageView
                android:id="@+id/iv_tab_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                app:tint="@color/color_state_main_tab_tint" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_tab_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_select_main"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_main_tab"
                android:layout_gravity="center"
                android:duplicateParentState="true"/>

            <ImageView
                android:id="@+id/iv_tab_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                app:tint="@color/color_state_main_tab_tint" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_tab_favorite"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_select_heart"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_main_tab"
                android:layout_gravity="center"
                android:duplicateParentState="true"/>

            <ImageView
                android:id="@+id/iv_tab_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_heart"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                app:tint="@color/color_state_main_tab_tint" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_tab_team"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_select_team"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_main_tab"
                android:layout_gravity="center"
                android:duplicateParentState="true"/>

            <ImageView
                android:id="@+id/iv_tab_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_car"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                app:tint="@color/color_state_main_tab_tint" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_tab_package"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_select_package"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_main_tab"
                android:layout_gravity="center"
                android:duplicateParentState="true"/>

            <ImageView
                android:id="@+id/iv_tab_package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_package"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                app:tint="@color/color_state_main_tab_tint" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_tab_pocket"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_select_pocket"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_main_tab"
                android:layout_gravity="center"
                android:duplicateParentState="true"/>

            <ImageView
                android:id="@+id/iv_tab_pocket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pocket"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                app:tint="@color/color_state_main_tab_tint" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_tab_settings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_select_setting"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_main_tab"
                android:layout_gravity="center"
                android:duplicateParentState="true"/>

            <ImageView
                android:id="@+id/iv_tab_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                app:tint="@color/color_state_main_tab_tint" />

        </FrameLayout>

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@id/vp_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/gl_tab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

