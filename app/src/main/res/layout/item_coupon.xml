<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="368dp"
    android:layout_height="88dp"
    android:background="@drawable/bg_round_12_ffffff">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/iv_coupon"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:scaleType="centerCrop"
        android:src="@color/color_on_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:round="12dp" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/font_500"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="5dp"
        android:ellipsize="end"
        android:letterSpacing="0.08"
        android:maxLines="1"
        android:textColor="@color/color_coupon_text"
        android:textSize="28sp"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@id/tv_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/iv_coupon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="漢來美食" />

    <TextView
        android:id="@+id/tv_desc"
        style="@style/font_400"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:letterSpacing="0.01"
        android:fontFamily="@font/noto_sanstc_regular_400"
        android:textColor="@color/color_coupon_desc_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/iv_coupon"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        tools:text="限量珍奶泡芙" />

    <ImageButton
        android:id="@+id/bt_like"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="12dp"
        android:background="@null"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:src="@drawable/ic_heart_unlike"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>